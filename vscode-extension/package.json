{
  "name": "auto-language-switch",
  "publisher": "local",
  "displayName": "Auto Language Switch",
  "description": "Automatically switch input method based on context (Code vs Comment).",
  "version": "0.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/example/auto-language-switch.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "auto-language-switch.toggle",
        "title": "ALS: Toggle Active/Inactive"
      },
      {
        "command": "auto-language-switch.setup",
        "title": "ALS: Setup Wizard (Configure Keyboards)"
      }
    ],
    "configuration": {
      "title": "Auto Language Switch",
      "properties": {
        "autoLanguageSwitch.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/Disable the extension."
        },
        "autoLanguageSwitch.englishLayout": {
          "type": "string",
          "default": "00000409",
          "description": "Keyboard Layout ID for English. (Tip: Run command 'ALS: Setup Wizard' to select from a list)"
        },
        "autoLanguageSwitch.chineseLayout": {
          "type": "string",
          "default": "00000804",
          "description": "Keyboard Layout ID for Chinese. (Tip: Run command 'ALS: Setup Wizard' to select from a list)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build-sidecar && npm run compile",
    "build-sidecar": "node build-sidecar.js",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^8.47.0",
    "typescript": "^5.1.6"
  }
}
