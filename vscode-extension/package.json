{
  "name": "auto-language-switch",
  "displayName": "Auto Language Switch",
  "description": "Automatically switch input method based on context (Code vs Comment).",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "auto-language-switch.toggle",
        "title": "ALS: Toggle Active/Inactive"
      }
    ],
    "configuration": {
      "title": "Auto Language Switch",
      "properties": {
        "autoLanguageSwitch.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/Disable the extension."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "typescript": "^5.1.6"
  }
}
